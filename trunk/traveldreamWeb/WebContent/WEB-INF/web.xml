<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
	<display-name>traveldreamWeb</display-name>
	
	<welcome-file-list>
    	<welcome-file>homepage.xhtml</welcome-file>
  	</welcome-file-list>
  	
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
    	<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    	<load-on-startup>1</load-on-startup>
  	</servlet>
  	
  	<servlet-mapping>
    	<servlet-name>Faces Servlet</servlet-name>
    	<url-pattern>/faces/*</url-pattern>
   		<url-pattern>*.xhtml</url-pattern>
		<url-pattern>*.jsf</url-pattern>    
  	</servlet-mapping>
  	
	<login-config>
		<auth-method>FORM</auth-method>
		<form-login-config>
			<form-login-page>/login.xhtml</form-login-page>
			<form-error-page>/login.xhtml</form-error-page>
		</form-login-config>
	</login-config>  

	<security-role>
	    <role-name>UTENTE</role-name>
	</security-role>
	<security-role>
	    <role-name>DIPENDENTE</role-name>
	</security-role>		 	
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>area_dipendenti</web-resource-name>
			<url-pattern>/dipendente/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>DIPENDENTE</role-name>
		</auth-constraint>
	</security-constraint>
		<security-constraint>
		<web-resource-collection>
			<web-resource-name>area_utenti</web-resource-name>
			<url-pattern>/utente/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>UTENTE</role-name>
		</auth-constraint>
	</security-constraint>	
</web-app>